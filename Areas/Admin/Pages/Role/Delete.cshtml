@page "/admin/delete-role/{roleid}"
@model App.Admin.Role.EditModel
@{
    ViewData["Title"] = "Delete a role";
}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<div class="row">
    <div class="col-md-7">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>Are you sure? You want to delete this role? @Model.role.Name</p>
            <div class="form-group">
                <input type="submit" value="Deelte" class="btn btn-danger" />
                <a class="btn btn-secondary" asp-page="./Index">List role</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
