@page "/admin/roles"
@model App.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "List role";
}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<a class="btn btn-success mb-5" asp-page="./Create">Create a new role</a>
<a class="btn btn-success mb-5" asp-page="../User/Index">Manage Users</a>

<table class="table table-dark table-striped table-hover table-bordered">
    <tr>
        <th>Name role</th>
        <th>Action</th>
    </tr>
    @foreach (var role in Model.roles)
    {
        <tr>
            <td>
                <p>@role.Name</p>
                @foreach (var claim in role.Claims)
                {
                    <small>@claim</small>
                }
            </td>
            <td>
                <a class="btn btn-info" asp-page="./Edit" asp-route-roleid="@role.Id">Update</a>
                <a class="btn btn-danger" asp-page="./Delete" asp-route-roleid="@role.Id">Delete</a>
            </td>
        </tr>
    }
</table>
