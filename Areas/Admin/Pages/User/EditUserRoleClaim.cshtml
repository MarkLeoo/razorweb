@page "/admin/edit-user-claim/{userid?}"
@model App.Admin.User.EditUserRoleClaimModel
@{
    ViewData["Title"] = "Claim của user";
}
<h1>@ViewData["Title"]</h1>

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<div class="row">
    <div class="col-md-7">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ClaimType" class="control-label"></label>
                <input asp-for="Input.ClaimType" class="form-control" />
                <span asp-validation-for="Input.ClaimType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ClaimValue" class="control-label"></label>
                <input asp-for="Input.ClaimValue" class="form-control" />
                <span asp-validation-for="Input.ClaimValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.userClaim != null)
                {
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <input type="submit" value="Delete" class="btn btn-primary" asp-page-handler="Delete"
                    asp-route-claimid="@Model.userClaim.Id" />
                }
                else
                {
                    <input type="submit" value="Create" class="btn btn-primary" />
                }
                <a class="btn btn-secondary" asp-page="./AddRole" asp-route-id="@Model.user.Id">Edit user</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
