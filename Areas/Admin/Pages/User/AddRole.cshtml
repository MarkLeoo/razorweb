@page "/admin/assign-user-role/{id}"
@model App.Admin.User.SetRoleModel
@{
    ViewData["Title"] = "Set role";
}

<h3>Set role for member: @Model.user.UserName</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleNames" class="form-label"></label>
                @Html.ListBoxFor(m => m.RoleNames, Model.allRoles, new{ @class = "w-100 mt-3", id =
                "id-select-roles" })
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Set role</button>
            <a class="btn btn-info" asp-page="./Index">List member</a>
        </form>
        <hr>
        <p>Các claims của user có được từ role</p>
        @if (Model.claimsInRole.Count > 0)
        {
            <ul>
                @foreach (var claim in Model.claimsInRole)
                {
                    <li>@claim.ClaimType : @claim.ClaimValue</li>
                }
            </ul>
        }

        <p>Các claims riêng</p>
        <a asp-page="./EditUserRoleClaim" asp-page-handler="AddClaim" asp-route-id="@Model.user.Id">+ Thêm Claim
            riêng</a>
        @if (Model.claimsInUserClaim.Count > 0)
        {
            <ul>
                @foreach (var claim in Model.claimsInUserClaim)
                {
                    <a asp-page="./EditUserRoleClaim" asp-page-handler="EditClaim" asp-route-id="@claim.Id">@claim.ClaimType :
                        @claim.ClaimValue</a>
                }
            </ul>
        }
    </div>
</div>

@section Scripts {
<script src="~/lib/multiple-select/multiple-select.min.js"></script>
<link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css">
<script>
    $("#id-select-roles").multipleSelect({
        selectAll: false,
        keepOpen: false,
        isOpen: false
    });
</script>
<partial name="_ValidationScriptsPartial" />
}
